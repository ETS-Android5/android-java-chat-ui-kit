<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/view_foreground"
        android:clickable="true"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="72dp">

        <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
            android:id="@+id/userListItem_avatar"
            android:layout_width="36dp"
            app:corner_radius="18dp"
            app:background_color="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            tools:src="@tools:sample/avatars"
            android:layout_height="36dp" />
        <com.cometchatworkspace.components.shared.secondaryComponents.cometchatStatusIndicator.CometChatStatusIndicator
            android:layout_width="16dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/userListItem_userPresence"
            android:layout_alignEnd="@+id/userListItem_avatar"
            android:layout_alignBottom="@+id/userListItem_avatar"
            android:layout_height="16dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/userListItem_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/userListItem_title"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/full_names"
                android:layout_marginEnd="16dp"
                android:textColor="@color/primaryTextColor"
                android:textSize="@dimen/name"
                android:maxLines="1"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:id="@+id/userListItem_subTitle"
                android:layout_width="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                tools:text="@tools:sample/full_names"
                android:layout_marginEnd="16dp"
                android:textSize="@dimen/eleven"
                android:maxLines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvSeperator"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/userListItem_avatar"
            android:background="@color/light_grey"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_height="0.8dp"/>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
</layout>

