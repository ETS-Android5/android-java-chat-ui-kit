<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/rl_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.google.android.material.card.MaterialCardView
            android:layout_alignParentEnd="true"
            android:id="@+id/cv_message_container"
            android:layout_width="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:layout_margin="8dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/image_view"
                    android:layout_width="250dp"
                    android:layout_height="100dp">
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/link_img"
                        android:layout_width="250dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_defaulf_image"
                        android:background="@color/textColorWhite"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true" />
                    <ImageView
                        android:id="@+id/videoLink"
                        android:visibility="gone"
                        tools:visibility="visible"
                        android:layout_centerInParent="true"
                        android:background="@drawable/ic_circle_grey_32dp"
                        android:padding="8dp"
                        android:src="@drawable/ic_play_arrow_black_24dp"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>
                </RelativeLayout>
                <TextView
                    android:paddingTop="16dp"
                    android:paddingStart="16dp"
                    android:paddingBottom="8dp"
                    android:id="@+id/link_title"
                    android:textColor="@color/textColorWhite"
                    android:layout_below="@+id/image_view"
                    tools:text="SecondHand Shoes"
                    android:textStyle="bold"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingBottom="8dp"
                    android:paddingStart="16dp"
                    android:textStyle="italic"
                    android:textColor="@color/textColorWhite"
                    tools:text="Lorium Espium wet twe serew fae daq ruqa"
                    android:id="@+id/link_subtitle"
                    android:layout_below="@+id/link_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:paddingLeft="16dp"
                    android:textColor="@color/textColorWhite"
                    android:id="@+id/message"
                    android:layout_marginTop="8dp"
                    android:layout_below="@id/link_subtitle"
                    tools:text="@tools:sample/lorem"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginTop="16dp"
                    android:background="@color/light_grey"
                    android:id="@+id/linkSeperator"
                    android:layout_below="@+id/message"
                    android:layout_width="250dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:id="@+id/visitLink"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linkSeperator"
                    android:background="@color/textColorWhite"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="@string/visit"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:layout_alignEnd="@id/cv_message_container"
            android:layout_below="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:gravity="end"
            android:layout_height="wrap_content">
            <com.cometchatworkspace.components.shared.secondaryComponents.cometchatReaction.CometChatMessageReaction
                android:id="@+id/reactions_group"
                app:messageReaction_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:visibility="gone"
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/thread_reply_count"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                tools:text="2 replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/receipt_layout"
                layout="@layout/cometchat_message_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
