<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:layoutDirection="ltr"
        android:id="@+id/rl_message"
        android:animateLayoutChanges="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
            android:layout_width="24dp"
            android:id="@+id/iv_user"
            tools:src="@tools:sample/avatars"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/tv_user"
            tools:text="Iron Man"
            android:textSize="12sp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_message_container"
            android:layout_below="@+id/tv_user"
            android:layout_width="wrap_content"
            app:cardBackgroundColor="@color/message_bubble_grey"
            app:cardCornerRadius="12dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_user"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <include
                    layout="@layout/message_left_reply_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp" />
                <RelativeLayout
                    android:layout_below="@+id/replyLayout"
                    android:backgroundTint="@color/red_600"
                    android:background="@drawable/cc_message_bubble_left"
                    android:visibility="gone"
                    android:id="@+id/sentiment_layout"
                    android:layout_width="250dp"
                    android:padding="16dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:textColor="@color/textColorWhite"
                        android:layout_toLeftOf="@+id/view_sentiment"
                        android:text="@string/sentiment_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:clickable="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/view_sentiment"
                        android:layout_alignParentEnd="true"
                        android:textStyle="bold"
                        android:textColor="@color/textColorWhite"
                        android:text="@string/view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_below="@+id/replyLayout"
                    android:id="@+id/cv_message_container_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/text_message"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginEnd="10dp"
                        android:autoLink="web|all"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:maxWidth="200dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/primaryTextColor"
                        tools:text="message" />
                </RelativeLayout>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>
        <ImageView
            android:id="@+id/img_pending"
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginStart="-5dp"
            android:layout_marginEnd="5dp"
            android:layout_toEndOf="@+id/cv_message_container"
            android:visibility="visible"/>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="start"
            android:layout_marginBottom="16dp"
            android:layout_alignStart="@id/cv_message_container"
            android:layout_below="@+id/cv_message_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.cometchatworkspace.components.shared.secondaryComponents.cometchatReaction.CometChatMessageReaction
                android:id="@+id/reactions_group"
                app:messageReaction_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:clickable="true"
                android:foreground="?selectableItemBackground"
                android:id="@+id/thread_reply_count"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                tools:text="2 replies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/receipt_layout"
                layout="@layout/cometchat_message_receipt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp" />
    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
