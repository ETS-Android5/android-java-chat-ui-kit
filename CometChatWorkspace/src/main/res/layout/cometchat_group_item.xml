<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="group"
            type="com.cometchat.pro.models.Group" />
    </data>

    <RelativeLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:background="?attr/selectableItemBackground"
        android:layout_height="72dp">

        <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
            android:id="@+id/groupListItem_Icon"
            android:layout_width="36dp"
            app:corner_radius="18dp"
            app:background_color="@color/colorPrimary"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            tools:src="@tools:sample/avatars"
            app:avatar="@{group}"
            android:layout_height="36dp" />


        <TextView
            android:drawablePadding="8dp"
            android:drawableTint="@color/grey"
            tools:drawableRight="@drawable/ic_private_group"
            android:id="@+id/groupListItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@tools:sample/full_names"
            android:layout_marginEnd="16dp"
            android:textSize="@dimen/name"
            android:textColor="@color/primaryTextColor"
            android:layout_toEndOf="@id/groupListItem_Icon"
            android:layout_alignTop="@id/groupListItem_Icon"
            android:gravity="center"
            android:maxLines="1"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/groupListItem_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_below="@id/groupListItem_title"
            android:layout_toEndOf="@id/groupListItem_Icon"
            android:textSize="@dimen/fourteen"
            android:maxLines="1"
            tools:text="Public"
            android:visibility="visible" />


        <TextView
            android:id="@+id/tvSeprator"
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/groupListItem_Icon"
            android:layout_alignParentBottom="true"
            android:background="@color/light_grey"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_height="1dp"/>

    </RelativeLayout>

</layout>

