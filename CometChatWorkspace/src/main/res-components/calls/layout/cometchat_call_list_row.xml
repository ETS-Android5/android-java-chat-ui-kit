<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="call"
            type="com.cometchat.pro.core.Call" />

    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <RelativeLayout
            android:id="@+id/callView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_alignParentStart="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:id="@+id/callListItem_userDetails"
                android:layout_toStartOf="@id/callListItem_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.cometchatworkspace.components.shared.secondaryComponents.cometchatAvatar.CometChatAvatar
                    android:id="@+id/callListItem_avatar"
                    android:layout_width="36dp"
                    app:corner_radius="18dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    tools:src="@tools:sample/avatars"
                    android:layout_height="36dp" />
                <TextView
                    android:textDirection="locale"
                    android:ellipsize="end"
                    android:id="@+id/callListItem_title"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@id/callListItem_avatar"
                    android:layout_toStartOf="@+id/callListItem_time"
                    android:layout_marginStart="8dp"
                    android:layout_toEndOf="@id/callListItem_avatar"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/full_names"
                    android:layout_marginEnd="16dp"
                    android:textSize="@dimen/name"
                    android:maxLines="1"
                    android:textStyle="bold" />

                <TextView
                    android:drawablePadding="8dp"
                    android:textDirection="locale"
                    android:gravity="center_vertical"
                    android:id="@+id/callListItem_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textSize="@dimen/twelve"
                    android:layout_marginStart="8dp"
                    android:layout_below="@id/callListItem_title"
                    android:layout_toEndOf="@id/callListItem_avatar"
                    android:maxLines="1"
                    android:layout_marginRight="8dp"
                    android:layout_toStartOf="@+id/callListItem_time"
                    android:visibility="visible" />


                <TextView
                    android:id="@+id/tvSeprator"
                    android:layout_width="match_parent"
                    android:layout_toEndOf="@id/callListItem_avatar"
                    android:background="@color/light_grey"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="16dp"
                    android:layout_height="0.8dp"/>

                <TextView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/callListItem_time"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"
                    tools:text="MON"
                    android:textSize="@dimen/twelve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                android:id="@+id/callListItem_button"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_audiocall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="@color/colorPrimary" />
        </RelativeLayout>

    </RelativeLayout>

</layout>

